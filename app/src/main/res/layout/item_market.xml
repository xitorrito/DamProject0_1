<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewObject"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:id="@+id/object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/object_name"
            android:text="Description"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/upgradeEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_description"
            android:text="Energy"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/upgradeEfficacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_description"
            android:text="Efficacy"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upgradeEfficacy"
            android:text="Price"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageMarket"
            android:src="@drawable/shield"
            android:layout_above="@+id/itemPrice"
            android:layout_toRightOf="@+id/upgradeEfficacy"
            android:layout_toEndOf="@+id/upgradeEfficacy"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>