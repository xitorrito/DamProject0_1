<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragments.Fragment3"
    android:background="@color/material_grey_900"
    android:orientation="vertical"
    android:paddingBottom="50dp">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/listView_tasks"
        android:layout_weight="2"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout3"
        android:gravity="center_horizontal"
        android:layout_margin="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hackear terminales"
            android:id="@+id/hackDevices"
            android:layout_weight="0"
            android:layout_below="@+id/listView_tasks"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/levelText"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView_level"
            android:textColor="#64dd17"
            android:layout_marginRight="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textView_levelNumber"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginRight="15dp"
            android:textColor="@color/material_grey_400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xpText"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textView_xpText"
            android:focusableInTouchMode="false"
            android:textColor="@color/ligh_green_700"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginRight="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/100"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textView_xp"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginRight="15dp"
            android:textColor="@color/material_grey_400"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moneyText"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textView_moneyText"
            android:focusableInTouchMode="false"
            android:textColor="@color/ligh_green_700"
            android:layout_alignTop="@+id/textView6"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6"
            android:layout_marginRight="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20$"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textView_MoneyNumber"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/material_grey_400" />
    </LinearLayout>


</RelativeLayout>
