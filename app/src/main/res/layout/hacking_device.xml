<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.xito.damproject01.HackingDevice"
    android:padding="10dp"
    android:background="@color/material_grey_900">


    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numColumns="5"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_above="@+id/progressTable"
        android:layout_margin="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:text="3"
        android:textColor="@color/colorAccent"
        android:id="@+id/textCountDown"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Encuentra el"
        android:layout_above="@+id/progressTable"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/textTable1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text="3"
        android:layout_toRightOf="@+id/textTable1"
        android:layout_above="@+id/progressTable"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/textTable2"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/progressTable"
        android:layout_margin="10dp"
        android:progressDrawable="@drawable/progressbar_layout"
        android:background="@color/material_grey_400"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"/>
</RelativeLayout>
